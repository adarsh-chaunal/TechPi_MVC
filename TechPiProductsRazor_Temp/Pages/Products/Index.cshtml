@page
@model TechPiProductsRazor_Temp.Pages.Products.IndexModel

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col pt-6">
			<h2 class="text-primary">Product List</h2>
		</div>
		<div id="create-btn" class="col pt-6 text-end">
			<a class="btn btn-primary" asp-page="/products/create">
				<i class="bi bi-plus-circle"></i> Add New Product
			</a>
		</div>
	</div>
</div>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Code</th>
			<th>Product</th>
			<th>Description</th>
			<th>Price</th>
			<th>Available</th>
			<th>First on TechPi Products</th>
			<th>Modify</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model.ProductList.OrderBy(u=>u.DisplayOrder))
		{
			<tr>
				<td>@obj.ProductCode</td>
				<td>@obj.ProductName</td>
				<td>@obj.ProductDescription</td>
				<td>@obj.Price</td>
				<td>@obj.InStock</td>
				<td>@obj.Created</td>
				<td>
					<div class="W-75 btn-group" role="group">
						<a class="btn btn-primary mx-2" asp-page="/products/edit" asp-route-id ="@obj.Id"><i class="bi bi-pencil-square"></i> Edit</a>
					</div>
					<div class="W-75 btn-group" role="group">
						<a class="btn btn-danger mx-2" asp-page="/products/delete" asp-route-id="@obj.Id"><i class="bi bi-trash-fill"></i> Delete</a>
					</div>
				</td>
				
			</tr>
		}
	</tbody>
</table>
