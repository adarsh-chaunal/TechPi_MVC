@model List<Product>

<div class="card shadow border-0 mt-4 mb-5">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Products List</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col pt-6">
			</div>
			<div id="create-btn" class="col pt-6 text-end">
				<a class="btn btn-primary" asp-controller="Product" asp-action="Create">
					<i class="bi bi-plus-circle"></i> Add New Product
				</a>
			</div>
		</div>
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>Code</th>
					<th>Product</th>
					<th>Description</th>
					<th>Price</th>
					<th>Available</th>
					<th>First on TechPi Products</th>
					<th>Modify</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
				{
					<tr>
						<td>@obj.ProductCode</td>
						<td>@obj.ProductName</td>
						<td>@obj.ProductDescription</td>
						<td>@obj.Price</td>
						<td>@obj.InStock</td>
						<td>@obj.Created</td>
						<td>
							<div class="W-75 btn-group" role="group">
								<a class="btn btn-primary mx-2" asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i> Edit</a>
							</div>
							<div class="W-75 btn-group" role="group">
								<a class="btn btn-danger mx-2" asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash-fill"></i> Delete</a>
							</div>
						</td>

					</tr>
				}
			</tbody>
		</table>
	</div>
</div>



