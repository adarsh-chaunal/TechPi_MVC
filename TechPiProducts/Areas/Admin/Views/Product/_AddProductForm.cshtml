@model Product

<form asp-controller="Product" asp-action="AddProduct" method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Add Product</h2>
			<hr />
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="DisplayOrder" class="p-0"></label>
			<input asp-for="DisplayOrder" class="form-control" />
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="ProductCode" class="p-0"></label>
			<input asp-for="ProductCode" class="form-control" />
			<span asp-validation-for="ProductCode" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="ProductName" class="p-0"></label>
			<input asp-for="ProductName" class="form-control" />
			<span asp-validation-for="ProductName" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="ProductDescription" class="p-0"></label>
			<textarea asp-for="ProductDescription" class="form-control"></textarea>
			<span asp-validation-for="ProductDescription" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="Price" class="p-0"></label>
			<input asp-for="Price" class="form-control" />
			<span asp-validation-for="Price" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="InStock" class="p-0">Available <input asp-for="InStock" class="form-check-input" checked="checked" /></label>
		</div>

		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control"><i class="bi bi-plus-circle"></i> Add</button>
			</div>
			<div class="col-6 col-md-3">
				<a class="btn btn-secondary form-control" asp-controller="Product" asp-action="Index">
					<i class="bi bi-x-circle"></i> Cancel
				</a>
			</div>
		</div>
	</div>
</form>
